    /* --------------- Helpers --------------- */
    const $ = (id) => document.getElementById(id);

    const validate = {
      signature: (sig) => {
        if (!sig) return { valid: true, value: '' };
        const cleaned = sig.trim();
        const hex = cleaned.startsWith('0x') ? cleaned.slice(2) : cleaned;
        const isHex = /^[a-fA-F0-9]+$/.test(hex) && hex.length === 130;
        const isB64Url = /^[A-Za-z0-9\-_]+$/.test(cleaned) && cleaned.length >= 40 && cleaned.length <= 200;
        if (!isHex && !isB64Url) {
          return { valid: false, error: 'Signature must be 0x-hex (130 chars) or Base64URL.' };
        }
        return { valid: true, value: cleaned };
      },
      amount: (value) => {
        if (!value) return { valid: true, value: '' };
        if (parseFloat(value) < 0) {
          return { valid: false, error: 'Amount must be positive' };
        }
        if (value.toString().toLowerCase().includes('e')) {
          return { valid: false, error: 'Scientific notation not allowed' };
        }
        return { valid: true, value };
      }
    };

    function showToast(message, type = 'success') {
      const existing = document.querySelector('.toast');
      if (existing) existing.remove();
      const toast = document.createElement('div');
      toast.className = `toast toast-${type}`;
      toast.textContent = message;
      document.body.appendChild(toast);
      setTimeout(() => toast.classList.add('show'), 10);
      setTimeout(() => {
        toast.classList.remove('show');
        setTimeout(() => toast.remove(), 300);
      }, 3000);
    }

    function showError(inputId, message) {
      const input = $(inputId);
      const errorEl = $(inputId + 'Error');
      if (errorEl) {
        errorEl.textContent = message;
        errorEl.classList.add('show');
      }
      if (input) input.classList.add('error');
    }

    function clearError(inputId) {
      const input = $(inputId);
      const errorEl = $(inputId + 'Error');
      if (errorEl) errorEl.classList.remove('show');
      if (input) input.classList.remove('error');
    }

    function getChainBadge(type) {
      const badges = {
        evm: '<span class="chain-badge evm">EVM</span>',
        solana: '<span class="chain-badge solana">SOL</span>',
        bitcoin: '<span class="chain-badge bitcoin">BTC</span>',
        tron: '<span class="chain-badge tron">TRX</span>'
      };
      return badges[type] || '';
    }

    function fillChains(sel) {
      sel.innerHTML = '';

      // Group chains by type
      const groups = {
        evm: CHAINS.filter(c => c.type === 'evm'),
        solana: CHAINS.filter(c => c.type === 'solana'),
        bitcoin: CHAINS.filter(c => c.type === 'bitcoin'),
        tron: CHAINS.filter(c => c.type === 'tron')
      };

      // Add EVM chains
      if (groups.evm.length) {
        const evmGroup = document.createElement('optgroup');
        evmGroup.label = 'üî∑ EVM Chains';
        groups.evm.forEach(c => {
          const o = document.createElement('option');
          o.value = c.key;
          o.textContent = c.label;
          o.dataset.type = c.type;
          evmGroup.appendChild(o);
        });
        sel.appendChild(evmGroup);
      }

      // Add Solana
      if (groups.solana.length) {
        const solGroup = document.createElement('optgroup');
        solGroup.label = 'üü£ Solana';
        groups.solana.forEach(c => {
          const o = document.createElement('option');
          o.value = c.key;
          o.textContent = c.label;
          o.dataset.type = c.type;
          solGroup.appendChild(o);
        });
        sel.appendChild(solGroup);
      }

      // Add Bitcoin
      if (groups.bitcoin.length) {
        const btcGroup = document.createElement('optgroup');
        btcGroup.label = 'üü† Bitcoin';
        groups.bitcoin.forEach(c => {
          const o = document.createElement('option');
          o.value = c.key;
          o.textContent = c.label;
          o.dataset.type = c.type;
          btcGroup.appendChild(o);
        });
        sel.appendChild(btcGroup);
      }

      // Add Tron
      if (groups.tron.length) {
        const tronGroup = document.createElement('optgroup');
        tronGroup.label = 'üî¥ Tron';
        groups.tron.forEach(c => {
          const o = document.createElement('option');
          o.value = c.key;
          o.textContent = c.label;
          o.dataset.type = c.type;
          tronGroup.appendChild(o);
        });
        sel.appendChild(tronGroup);
      }
    }

    function tokensFor(chainKey) {
      return TOKENS[chainKey] || [];
    }

    function fillTokens(sel, chainKey) {
      sel.innerHTML = '';
      const list = tokensFor(chainKey);
      list.forEach((token) => {
        const o = document.createElement('option');
        o.value = JSON.stringify(token);
        o.textContent = token.native ? `${token.sym} (Native)` : token.sym;
        sel.appendChild(o);
      });
      if (!list.length) {
        const o = document.createElement('option');
        o.value = '';
        o.textContent = '(no tokens)';
        sel.appendChild(o);
      }
    }

    function updateChainInfo(chainKey, infoElementId) {
      const chain = chainMeta(chainKey);
      const infoEl = $(infoElementId);
      if (!chain || !infoEl) return;

      const typeLabels = {
        evm: 'EIP-155 compatible',
        solana: 'Solana VM',
        bitcoin: 'Bitcoin network',
        tron: 'Tron VM'
      };

      infoEl.innerHTML = `${getChainBadge(chain.type)} ${typeLabels[chain.type]} ‚Ä¢ Chain: ${chain.chainId || 'N/A'}`;
    }

    function chainMeta(key) {
      return CHAINS.find(c => c.key === key);
    }

    function toBaseUnits(amount, decimals) {
      if (!amount || isNaN(amount) || parseFloat(amount) < 0) return '';
      if (amount.toString().toLowerCase().includes('e')) return '';
      const [intPart, fracRaw = ''] = String(amount).split('.');
      const frac = (fracRaw + '0'.repeat(decimals)).slice(0, decimals);
      const joined = (intPart.replace(/\D/g, '') || '0') + frac;
      const base = joined.replace(/^0+/, '');
      return base === '' ? '0' : base;
    }

    function assetParam(token, chain) {
      if (!token) return '';

      // Native tokens use slip44
      if (token.type === 'slip44') {
        return `slip44:${token.address}`;
      }

      // EVM ERC20 tokens
      if (token.type === 'erc20') {
        return `erc20:${token.address}`;
      }

      // Solana SPL tokens
      if (token.type === 'spl') {
        return `spl:${token.address}`;
      }

      // Tron TRC20 tokens
      if (token.type === 'trc20') {
        return `trc20:${token.address}`;
      }

      return '';
    }

    function getChainNamespace(chain) {
      if (!chain) return '';

      switch (chain.type) {
        case 'evm':
          return `eip155:${chain.chainId}`;
        case 'solana':
          return `solana:${chain.chainId}`;
        case 'bitcoin':
          return `bip122:${chain.chainId}`;
        case 'tron':
          return `tron:${chain.chainId}`;
        default:
          return '';
      }
    }

    /* --------------- Composers --------------- */
    function composeHome() {
      let url = `https://link.metamask.io/home`;
      if ($('homeSigned').checked) {
        const sig = ($('homeSig').value || '').trim();
        const validation = validate.signature(sig);
        if (!validation.valid) {
          showError('homeSig', validation.error);
          return '';
        }
        clearError('homeSig');
        if (sig) url += `?sig=${encodeURIComponent(sig)}`;
      }
      return url;
    }

    function composeSwap() {
      const fc = chainMeta($('fromChain').value);
      const tc = chainMeta($('toChain').value);
      if (!fc || !tc) return '';

      const ftVal = $('fromToken').value;
      const ttVal = $('toToken').value;
      const ft = ftVal ? JSON.parse(ftVal) : null;
      const tt = ttVal ? JSON.parse(ttVal) : null;
      if (!ft || !tt) return '';

      const nsFrom = getChainNamespace(fc);
      const nsTo = getChainNamespace(tc);

      const fromParam = assetParam(ft, fc);
      const toParam = assetParam(tt, tc);

      let url = `https://link.metamask.io/swap?from=${nsFrom}/${fromParam}&to=${nsTo}/${toParam}`;

      const human = $('amountHuman').value;
      if (human) {
        const validation = validate.amount(human);
        if (!validation.valid) {
          showError('amount', validation.error);
          return '';
        }
        clearError('amount');
        const base = toBaseUnits(human, ft.decimals);
        $('amountBase').value = base || '';
        if (base) url += `&amount=${base}`;
      } else {
        $('amountBase').value = '';
      }

      if ($('swapSigned').checked) {
        const sig = ($('swapSig').value || '').trim();
        const validation = validate.signature(sig);
        if (!validation.valid) {
          showError('swapSig', validation.error);
          return '';
        }
        clearError('swapSig');
        if (sig) url += `&sig=${encodeURIComponent(sig)}`;
      }

      return url;
    }

    function composeBuy() {
      let url = `https://link.metamask.io/buy`;
      if ($('buySigned').checked) {
        const sig = ($('buySig').value || '').trim();
        const validation = validate.signature(sig);
        if (!validation.valid) {
          showError('buySig', validation.error);
          return '';
        }
        clearError('buySig');
        if (sig) url += `?sig=${encodeURIComponent(sig)}`;
      }
      return url;
    }

    function copyToClipboard(text) {
      if (!text) {
        showToast('Nothing to copy', 'warning');
        return;
      }
      if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(text)
          .then(() => showToast('‚úì Copied to clipboard!', 'success'))
          .catch(() => fallbackCopy(text));
      } else {
        fallbackCopy(text);
      }
    }

    function fallbackCopy(text) {
      const textarea = document.createElement('textarea');
      textarea.value = text;
      textarea.style.position = 'fixed';
      textarea.style.opacity = '0';
      document.body.appendChild(textarea);
      textarea.select();
      try {
        document.execCommand('copy');
        showToast('‚úì Copied to clipboard!', 'success');
      } catch (err) {
        showToast('Failed to copy', 'error');
      }
      document.body.removeChild(textarea);
    }

    function resetHome() {
      $('homeSigned').checked = false;
      $('homeSig').value = '';
      $('homeSig').disabled = true;
      $('homeSig').style.opacity = '0.5';
      $('homeOut').textContent = '';
      clearError('homeSig');
      showToast('Home form reset', 'success');
    }

    function resetSwap() {
      $('fromChain').value = 'ethereum';
      $('toChain').value = 'polygon';
      fillTokens($('fromToken'), 'ethereum');
      fillTokens($('toToken'), 'polygon');
      updateChainInfo('ethereum', 'fromChainInfo');
      updateChainInfo('polygon', 'toChainInfo');
      $('amountHuman').value = '';
      $('amountBase').value = '';
      $('swapSigned').checked = false;
      $('swapSig').value = '';
      $('swapSig').disabled = true;
      $('swapSig').style.opacity = '0.5';
      $('swapOut').textContent = '';
      clearError('amount');
      clearError('swapSig');
      showToast('Swap form reset', 'success');
    }

    function resetBuy() {
      $('buySigned').checked = false;
      $('buySig').value = '';
      $('buySig').disabled = true;
      $('buySig').style.opacity = '0.5';
      $('buyOut').textContent = '';
      clearError('buySig');
      showToast('Buy form reset', 'success');
    }

    /* --------------- Wire up --------------- */
    window.addEventListener('DOMContentLoaded', () => {
      // Initialize chain dropdowns
      ['fromChain', 'toChain'].forEach(id => fillChains($(id)));

      // Set defaults
      $('fromChain').value = 'ethereum';
      $('toChain').value = 'polygon';

      // Fill tokens for defaults
      fillTokens($('fromToken'), $('fromChain').value);
      fillTokens($('toToken'), $('toChain').value);

      // Update chain info displays
      updateChainInfo($('fromChain').value, 'fromChainInfo');
      updateChainInfo($('toChain').value, 'toChainInfo');

      // Chain change handlers
      $('fromChain').addEventListener('change', () => {
        fillTokens($('fromToken'), $('fromChain').value);
        updateChainInfo($('fromChain').value, 'fromChainInfo');
      });

      $('toChain').addEventListener('change', () => {
        fillTokens($('toToken'), $('toChain').value);
        updateChainInfo($('toChain').value, 'toChainInfo');
      });

      // Amount validation
      $('amountHuman').addEventListener('input', (e) => {
        const value = e.target.value;
        if (value && parseFloat(value) < 0) {
          e.target.value = Math.abs(parseFloat(value));
          showToast('Negative values not allowed', 'warning');
        }
      });

      // Generate button handlers
      ['home', 'swap', 'buy'].forEach(type => {
        $(`${type}Generate`).addEventListener('click', () => {
          const outEl = $(`${type}Out`);
          outEl.classList.add('generating');
          setTimeout(() => {
            let url = '';
            if (type === 'home') url = composeHome();
            else if (type === 'swap') url = composeSwap();
            else if (type === 'buy') url = composeBuy();
            outEl.textContent = url;
            outEl.classList.remove('generating');
            if (url) showToast(`${type.charAt(0).toUpperCase() + type.slice(1)} deeplink generated!`, 'success');
          }, 300);
        });
      });

      // Copy handlers
      $('homeCopy').addEventListener('click', () => copyToClipboard($('homeOut').textContent.trim()));
      $('swapCopy').addEventListener('click', () => copyToClipboard($('swapOut').textContent.trim()));
      $('buyCopy').addEventListener('click', () => copyToClipboard($('buyOut').textContent.trim()));

      // Reset handlers
      $('homeReset').addEventListener('click', resetHome);
      $('swapReset').addEventListener('click', resetSwap);
      $('buyReset').addEventListener('click', resetBuy);

      // Signature checkbox handlers
      ['home', 'swap', 'buy'].forEach(type => {
        const checkbox = $(`${type}Signed`);
        const input = $(`${type}Sig`);
        checkbox.addEventListener('change', () => {
          input.disabled = !checkbox.checked;
          input.style.opacity = checkbox.checked ? '1' : '0.5';
          if (!checkbox.checked) {
            input.value = '';
            clearError(`${type}Sig`);
          }
        });
        input.disabled = !checkbox.checked;
        input.style.opacity = checkbox.checked ? '1' : '0.5';
      });
    });
  </script>
</body>
</html>
